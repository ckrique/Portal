
@{
    ViewBag.Title = "Funcionario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="~/Funcionario/EnviarFuncionario" method="post">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cadastro de Funcionários</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Dados do Funcionário
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Nome do Funcionário</label>
                                <input class="form-control" placeholder="Nome" name="nome" />
                            </div>
                            <div class="form-group">
                                <label>Código do Funcionário</label>
                                <input class="form-control" placeholder="Código" name="codigo">
                            </div>
                            <div class="form-group">
                                <label>CPF</label>
                                <input class="form-control" placeholder="CPF" name="cpf">
                            </div>
                            <div class="form-group">
                                <label>Identidade</label>
                                <input class="form-control" placeholder="Identidade" name="identidade">
                            </div>
                            <div class="form-group">
                                <label>Passaporte</label>
                                <input class="form-control" placeholder="Passaporte" name="passaport">
                            </div>
                            <div class="form-group">
                                <label>Documento Adicional</label>
                                <input class="form-control" name="documentoAdicional">
                            </div>
                            <div class="form-group">
                                <label>Número Documento Adicional</label>
                                <input class="form-control" name="numeroDocumentoAdicional">
                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Perfil</label>
                                <input class="form-control" name="perfil">
                            </div>
                            <div class="form-group">
                                <label>Cargo</label>
                                <input class="form-control" name="cargo">
                            </div>
                            <div class="form-group">
                                <label>Data de Nascimento</label>
                                <input class="form-control glyphicon-calendar" placeholder="dd/mm/aaaa" name="dataNascimento">
                            </div>
                            <div class="form-group">
                                <label>Data de Assunção do Cargo</label>
                                <input class="form-control glyphicon-calendar" placeholder="dd/mm/aaaa" name="dataAssuncao">
                            </div>
                            <div class="form-group">
                                <label>Data de Admissão</label>
                                <input class="form-control glyphicon-calendar" placeholder="dd/mm/aaaa" name="dataAdmissao">
                            </div>
                            <div class="form-group">
                                <label>Data de Demissão</label>
                                <input class="form-control glyphicon-calendar" placeholder="dd/mm/aaaa" name="dataDemissao">
                            </div>
                            <button type="submit" class="btn btn-default" id="btnEnviarFuncionario">Enviar</button>
                            <button type="reset" class="btn btn-default">Limpar Campos</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    </form>
